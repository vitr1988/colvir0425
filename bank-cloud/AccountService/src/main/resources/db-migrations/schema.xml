<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Vitalii Ivanov" id="Create-table-accounts">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="accounts"/>
            </not>
        </preConditions>
        <createSequence sequenceName="account_id_seq" startValue="1" incrementBy="1" cycle="true"/>
        <createTable tableName="accounts">
            <column name="id" type="bigint" defaultValueSequenceNext="account_id_seq">
                <constraints primaryKey="true"/>
            </column>
            <column name="client_id" type="bigint"/>
            <column name="balance" type="number"/>
        </createTable>
        <sql><![CDATA[
            alter sequence account_id_seq owned by accounts.id;
        ]]></sql>
    </changeSet>

</databaseChangeLog>